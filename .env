# Landing Page Environment Variables
# =================================

# Application Settings
NEXT_PUBLIC_APP_NAME="Smart Learning Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://smartlearning.ug"
NEXT_PUBLIC_SITE_URL="https://smartlearning.ug"

# Portal URLs
NEXT_PUBLIC_TEACHER_PORTAL_URL="https://teacher.smartlearning.ug"
NEXT_PUBLIC_STUDENT_PORTAL_URL="https://student.smartlearning.ug"
NEXT_PUBLIC_SCHOOL_PORTAL_URL="https://school.smartlearning.ug"

# Development URLs (for local development)
NEXT_PUBLIC_TEACHER_PORTAL_DEV="https://teachersportal-alpha.vercel.app/"
NEXT_PUBLIC_STUDENT_PORTAL_DEV="https://student-khaki-kappa.vercel.app/"
NEXT_PUBLIC_SCHOOL_PORTAL_DEV="https://teacher-neon-seven.vercel.app/"

# API Configuration
NEXT_PUBLIC_API_URL="https://api.smartlearning.ug"
API_SECRET_KEY="your-api-secret-key-here"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/smartlearning_main"
DATABASE_POOL_SIZE=20

# Authentication
NEXTAUTH_URL="https://smartlearning.ug"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# Third-party Services
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="noreply@smartlearning.ug"
SMTP_PASS="your-email-password"
FROM_EMAIL="Smart Learning <noreply@smartlearning.ug>"

# Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# Payment Configuration (Uganda)
FLUTTERWAVE_PUBLIC_KEY="your-flutterwave-public-key"
FLUTTERWAVE_SECRET_KEY="your-flutterwave-secret-key"
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="smartlearning-assets"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_ENVIRONMENT="development"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=true
NEXT_PUBLIC_MAINTENANCE_MODE=false
